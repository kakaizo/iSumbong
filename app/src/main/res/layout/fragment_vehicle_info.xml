<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6D040404">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEBD7"
        tools:context=".fragment_vehicle_info">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="238dp"
            android:layout_marginBottom="10dp"
            android:text="Vehicle Plate Number"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/Text_plate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Text_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="166dp"
            android:layout_marginBottom="14dp"
            android:background="#39272626"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="281dp"
            android:layout_marginBottom="15dp"
            android:text="Type of Vehicle"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/spinner_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Text_plate" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="266dp"
            android:text="Picture of Vehicle"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_type" />

        <Button
            android:id="@+id/button_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="158dp"
            android:layout_marginEnd="159dp"
            android:background="#423E37"
            android:text="UPLOAD"
            android:textColor="#EDEBD7"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_vehicle" />

        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="337dp"
            android:layout_height="28dp"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="40dp"
            android:background="#39272626"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <ImageView
            android:id="@+id/imageView_vehicle"
            android:layout_width="340dp"
            android:layout_height="255dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ic_baseline_image_24"
            app:layout_constraintBottom_toTopOf="@+id/button_vehicle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <ImageView
            android:id="@+id/imageView_OR"
            android:layout_width="339dp"
            android:layout_height="252dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="26dp"
            android:src="@drawable/ic_baseline_image_24"
            app:layout_constraintBottom_toTopOf="@+id/button_OR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_vehicle" />

        <Button
            android:id="@+id/button_OR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="159dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="158dp"
            android:background="#423E37"
            android:text="UPLOAD"
            android:textColor="#EDEBD7"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_OR" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>