<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_public"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="149dp"
        android:layout_marginEnd="104dp"
        android:background="@drawable/button_background"
        android:text="PUBLIC"
        android:textColor="#EDEBD7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_admin"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_admin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="104dp"
        android:background="@drawable/button_background"
        android:text="ADMIN"
        android:textColor="#EDEBD7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_exit"
        app:layout_constraintTop_toBottomOf="@+id/button_public" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="104dp"
        android:background="@drawable/button_stroke"
        android:text="EXIT"
        android:textColor="#423E37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_admin" />
</androidx.constraintlayout.widget.ConstraintLayout>